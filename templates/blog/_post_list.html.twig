<div class="text-center justify-center my-5">
    {% if app.user %}



    <a href="/blog/create" class="p-2 mr-5 rounded-md bg-green-300 hover:bg-green-500 text-white font-bold text-xl transition delay-100" href="{{path('app_create_post')}}">Create Post</a>



{%endif%}
<a class="bg-green-300 text-white w-28 text-xl font-bold p-2 rounded-md mb-5">{{posts|length}} Posts</a>

{% if posts|length>0 %}


<div class="mt-10 grid grid-cols-1 lg:grid-cols-2 gap-5 w-full text-center w-3/4">


    {% for post in posts %}
    {{include('blog/_post.html.twig', {post:post})}}
    {% endfor%}
</div>
    {% else %}
    <p class="mt-28"> Sorry, there is no posts to see yet! </p>
    {% endif %}

</div>